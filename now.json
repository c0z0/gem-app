{
  "name": "gem",
  "version": 2,
  "regions": ["bru"],
  "builds": [
    {"src": "packages/api/src/index.js", "use": "@now/node-server"},
    {"src": "packages/www/package.json", "use": "@now/next"}
  ],
  "routes": [
    {"src": "/api", "dest": "packages/api/src/index.js"},
    {"src": "/(.*)", "dest": "packages/www/$1"}
  ],
  "env": {
    "MONGO_URI": "@gem_uri",
    "JWT_SECRET": "@gem_jwt",
    "SG_KEY": "@sg_key"
  }
}
